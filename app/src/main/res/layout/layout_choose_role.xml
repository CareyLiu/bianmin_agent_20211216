<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:layout_width="173dp"
        android:layout_height="173dp"
        android:layout_marginTop="80dp"
        android:src="@mipmap/juyijia_shangjiabantou"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <LinearLayout
            android:id="@+id/ll_denglufangshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/view_view1"
                android:layout_width="43dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:background="@color/black_06122c" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:includeFontPadding="false"
                android:text="选择登陆方式"
                android:textColor="#ff06122c"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_view2"
                android:layout_width="43dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="21dp"
                android:background="@color/black_06122c" />


        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_tuangoushangjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="@+id/ll_denglufangshi"
            app:layout_constraintTop_toBottomOf="@+id/ll_denglufangshi">


            <ImageView
                android:id="@+id/iv_tuangou_shangjia"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_marginLeft="11dp"
                android:src="@mipmap/juyijiashangjiaban_dianpushangjia"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="团购商家"
                android:textColor="#ff06122c"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@+id/iv_tuangou_shangjia"
                app:layout_constraintRight_toRightOf="@+id/iv_tuangou_shangjia"
                app:layout_constraintTop_toBottomOf="@+id/iv_tuangou_shangjia" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_dianpu_shangjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintRight_toRightOf="@+id/ll_denglufangshi"
            app:layout_constraintTop_toBottomOf="@+id/ll_denglufangshi">


            <ImageView
                android:id="@+id/iv_dianpu_shangjia"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_marginRight="11dp"
                android:src="@mipmap/juyijiashangjiaban_dianpushangjia"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="店铺商家"
                android:textColor="#ff06122c"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@+id/iv_dianpu_shangjia"
                app:layout_constraintRight_toRightOf="@+id/iv_dianpu_shangjia"
                app:layout_constraintTop_toBottomOf="@+id/iv_dianpu_shangjia" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>