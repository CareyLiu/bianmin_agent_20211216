<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="154dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mine_qianbao_bg"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:includeFontPadding="false"
            android:text="总资产(元)"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:text="1000.00"
                android:textColor="@color/white"
                android:textSize="29sp" />

            <LinearLayout
                android:id="@+id/ll_mingxi"
                android:layout_width="73dp"
                android:layout_height="31dp"
                android:background="@drawable/mine_qianbao_mingxi"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginLeft="9dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="明细"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="13dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_tixian"
            android:layout_width="297dp"
            android:layout_height="43dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/white_radius_8"
            android:text="提现"
            android:textColor="@color/text_color_3"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_jiesuan"
        android:layout_width="325dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/white_radius_8"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:text="待结算金额"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_jiesuan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:text="¥350.00"
            android:textColor="@color/text_red"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_marginRight="19dp"
            android:background="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_zhanghaoset"
        android:layout_width="325dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/white_radius_8"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:text="提现账号设置"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_marginRight="19dp"
            android:background="@color/black" />
    </LinearLayout>
</LinearLayout>