<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayfff5f5f5"
    tools:context=".ui.activity.tuangou.TianJiaGuiZeActivity">


    <EditText
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/white"
        android:gravity="top"
        android:hint="请输入套餐规则(点击输入)"
        android:paddingLeft="19dp"
        android:paddingTop="19dp"
        android:textColorHint="@color/black"
        android:textCursorDrawable="@drawable/guangbiao"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_text"
        android:id="@+id/ll_ercijinru"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="14dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tv_shanchu"
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/white_line_radius_8"
            android:gravity="center"
            android:text="删除"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/tv_queding"
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/white_line_radius_8"
            android:gravity="center"
            android:text="确定"
            android:textColor="#FFFC0100"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>