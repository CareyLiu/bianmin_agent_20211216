<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="19dp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="标题"
                    android:textColor="@color/text_color_3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_title_img"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginTop="19dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_marginLeft="19dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/shoppicture_icon_add" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_img_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right">

                        <TextView
                            android:id="@+id/tv_img_num"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:paddingRight="14dp"
                            android:text="2张"
                            android:textColor="@color/text_color_6"
                            android:textSize="15sp"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginRight="14dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/sd_push_grey" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/ed_title_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="19dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="标题示例：【现货】夏季新款 韩版青少年短袖"
                    android:includeFontPadding="false"
                    android:minHeight="20dp"
                    android:textColor="@color/text_color_6"
                    android:textColorHint="@color/text_color_9"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_leimu"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="类目"
                    android:textColor="@color/text_color_3"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_leimu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:hint="请选择类目"
                    android:textColor="@color/text_color_3"
                    android:textColorHint="@color/text_color_6"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/sd_push_grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_anzhuangfuwu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="安装服务"
                        android:textColor="@color/text_color_3"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_swich"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line" />

                <LinearLayout
                    android:id="@+id/ll_anzhuangfei"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="设置安装费"
                        android:textColor="@color/text_color_3"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_anzhuangfei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:hint="设置安装费"
                        android:textColor="@color/text_color_3"
                        android:textColorHint="@color/text_color_6"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/sd_push_grey" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_yunfei"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="设置商品价格"
                    android:textColor="@color/text_color_3"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_yunfei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:hint="请设置商品价格"
                    android:textColor="@color/text_color_3"
                    android:textColorHint="@color/text_color_6"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/sd_push_grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bianhao"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="设置商品编号"
                    android:textColor="@color/text_color_3"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_bianhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:hint="请设置商品编号"
                    android:textColor="@color/text_color_3"
                    android:textColorHint="@color/text_color_6"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/sd_push_grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_kucun"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="设置商品库存"
                    android:textColor="@color/text_color_3"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_kucun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:hint="请设置商品库存"
                    android:textColor="@color/text_color_3"
                    android:textColorHint="@color/text_color_6"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/sd_push_grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_chandi"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="产地"
                    android:textColor="@color/text_color_3"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_chandi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:hint="请选择产地"
                    android:textColor="@color/text_color_3"
                    android:textColorHint="@color/text_color_6"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/sd_push_grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_add_shangpinhao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_add_shangpinhao"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_gravity="right"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="8dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/xiangqing_icon_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:text="添加商品型号"
                        android:textColor="@color/text_color_3"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tuwen"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="商品图文详情"
                        android:textColor="@color/text_color_3"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/sd_push_grey" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fengmian"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="商品封面图"
                        android:textColor="@color/text_color_3"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/sd_push_grey" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/bt_ok"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="96dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/white_line_radius_8"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/text_color_3"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
