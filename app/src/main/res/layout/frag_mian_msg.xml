<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.shendeng.agent.ui.view.SelectTabView
            android:id="@+id/tab_liaotian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></com.shendeng.agent.ui.view.SelectTabView>

        <com.shendeng.agent.ui.view.SelectTabView
            android:id="@+id/tab_tongzhi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></com.shendeng.agent.ui.view.SelectTabView>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpg_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></androidx.viewpager.widget.ViewPager>
</LinearLayout>
