<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlTextSizeTime="10sp"
            app:srlTextSizeTitle="@dimen/sp_12" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@color/white"
                    android:minHeight="90dp"
                    android:orientation="vertical"
                    android:paddingLeft="14dp">

                    <TextView
                        android:id="@+id/tv_danhao_tuihuo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:includeFontPadding="false"
                        android:text="退货单号:3130845114016541"
                        android:textColor="@color/text_color_3"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_danhao_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:includeFontPadding="false"
                        android:text="订单号:1903130845114016541-fbs-2-111524-0"
                        android:textColor="@color/text_color_3"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_yuanyin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"
                        android:includeFontPadding="false"
                        android:text="退款原因：买多了买多了买多了买多了买多了买多了"
                        android:textColor="@color/text_red"
                        android:textSize="12sp" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="66dp"
                            android:layout_height="wrap_content"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="66dp"
                            android:layout_height="wrap_content"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="66dp"
                            android:layout_height="wrap_content"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv4"
                            android:layout_width="66dp"
                            android:layout_height="wrap_content"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv5"
                            android:layout_width="66dp"
                            android:layout_height="wrap_content"
                            android:gravity="center" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="57dp"
                        android:gravity="center">

                        <View
                            android:id="@+id/qiu1"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/order_qiu_s" />

                        <View
                            android:id="@+id/line1"
                            android:layout_width="35dp"
                            android:layout_height="2dp"
                            android:layout_marginLeft="11dp"
                            android:background="@color/order_gray" />

                        <View
                            android:id="@+id/qiu2"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginLeft="11dp"
                            android:background="@drawable/order_qiu_n" />

                        <View
                            android:id="@+id/line2"
                            android:layout_width="35dp"
                            android:layout_height="2dp"
                            android:layout_marginLeft="11dp"
                            android:background="@color/order_gray" />

                        <View
                            android:id="@+id/qiu3"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginLeft="11dp"
                            android:background="@drawable/order_qiu_n" />

                        <View
                            android:id="@+id/line3"
                            android:layout_width="35dp"
                            android:layout_height="2dp"
                            android:layout_marginLeft="11dp"
                            android:background="@color/order_gray" />

                        <View
                            android:id="@+id/qiu4"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginLeft="11dp"
                            android:background="@drawable/order_qiu_n" />

                        <View
                            android:id="@+id/line4"
                            android:layout_width="35dp"
                            android:layout_height="2dp"
                            android:layout_marginLeft="11dp"
                            android:background="@color/order_gray" />

                        <View
                            android:id="@+id/qiu5"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginLeft="11dp"
                            android:background="@drawable/order_qiu_n" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_daojishi"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:text="还剩1天23时15分11秒"
                    android:textColor="@color/text_red"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="113dp"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_img"
                        android:layout_width="83dp"
                        android:layout_height="83dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="83dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_title_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:includeFontPadding="false"
                            android:text="商品名"
                            android:textColor="@color/text_color_3"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:includeFontPadding="false"
                            android:text="数量 *1"
                            android:textColor="@color/text_color_9"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:includeFontPadding="false"
                            android:paddingBottom="1dp"
                            android:text="退款金额：¥129"
                            android:textColor="@color/text_red"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:id="@+id/tv_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:includeFontPadding="false"
                        android:text="支付方式："
                        android:textColor="@color/text_color_6"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_pay_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:text="交易时间："
                        android:textColor="@color/text_color_6"
                        android:textSize="12sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/bt1"
                            android:layout_width="158dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/white_line_radius_8"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/bt2"
                            android:layout_width="158dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/white_line_radius_8"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffeeeeee"
            app:srlTextSizeTime="10sp"
            app:srlTextSizeTitle="@dimen/sp_12" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>