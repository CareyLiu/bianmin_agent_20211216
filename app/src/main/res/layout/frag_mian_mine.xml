<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/mine_top_bg" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="我的店(淘宝商家模式)"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_set"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/mine_set" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="331dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_radius_8"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="96dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_head"
                                android:layout_width="61dp"
                                android:layout_height="61dp"
                                android:layout_marginLeft="14dp"
                                android:layout_marginRight="14dp"
                                android:src="@mipmap/mine_pic_touxiang_tb" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:text="管理员账号："
                                    android:textColor="@color/text_color_3"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_admin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:includeFontPadding="false"
                                    android:text="15112345678"
                                    android:textColor="@color/text_color_3"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/iv_shenfen"
                                android:layout_width="52dp"
                                android:layout_height="23dp"
                                android:layout_marginRight="19dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/mine_boss" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="61dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_guanzhu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:text="1"
                                    android:textColor="@color/text_color_3"
                                    android:textSize="13sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1dp"
                                    android:includeFontPadding="false"
                                    android:text="被关注数"
                                    android:textColor="@color/text_color_6"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_shoucang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:text="1"
                                    android:textColor="@color/text_color_3"
                                    android:textSize="13sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1dp"
                                    android:includeFontPadding="false"
                                    android:text="被收藏数"
                                    android:textColor="@color/text_color_6"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_kaquan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:text="1"
                                    android:textColor="@color/text_color_3"
                                    android:textSize="13sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1dp"
                                    android:includeFontPadding="false"
                                    android:text="卡券数"
                                    android:textColor="@color/text_color_6"
                                    android:textSize="13sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_qianbao"
                        android:layout_width="331dp"
                        android:layout_height="54dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/white_radius_8"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/mine_icon_qianbao" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="我的钱包"
                            android:textColor="@color/text_color_3"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:layout_marginRight="21dp"
                            android:background="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_about"
                        android:layout_width="331dp"
                        android:layout_height="54dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/white_radius_8"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/mine_icon_about" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="关于我们"
                            android:textColor="@color/text_color_3"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:layout_marginRight="21dp"
                            android:background="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_dizhi"
                        android:layout_width="331dp"
                        android:layout_height="54dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/white_radius_8"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/mine_icon_tuihuodizhi" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="退货地址"
                            android:textColor="@color/text_color_3"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:layout_marginRight="21dp"
                            android:background="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_yuangong"
                        android:layout_width="331dp"
                        android:layout_height="54dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/white_radius_8"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/mine_icon_yuangong" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="员工管理"
                            android:textColor="@color/text_color_3"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:layout_marginRight="21dp"
                            android:background="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_qiehuan"
                        android:layout_width="331dp"
                        android:layout_height="54dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/white_radius_8"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/mine_icon_change" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击切换到至团购商家模式"
                            android:textColor="@color/text_color_3"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
