<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@drawable/white_line"
        android:gravity="center_vertical"
        android:paddingLeft="14dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/tuihuo_moren"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="默认"
                    android:textColor="@color/text_red"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:includeFontPadding="false"
                    android:text="秦朗"
                    android:textColor="@color/text_color_3"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="15112345678"
                    android:textColor="@color/text_color_6"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="-100"
                    android:textColor="@color/text_color_3"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"
                android:text="安徽省宣城市绩溪县李时珍胡同82号"
                android:textColor="@color/text_color_3"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:background="@drawable/tuihuo_line" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:padding="14dp"
            android:text="编辑"
            android:textColor="@color/text_color_3"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>