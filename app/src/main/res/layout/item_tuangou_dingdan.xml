<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="12dp"
    android:id="@+id/constrain"
    android:background="@drawable/bg_white_radius_8">


    <TextView
        android:id="@+id/tv_taocan_ming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:includeFontPadding="false"
        android:text="2-3人精品套餐"
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_zhuangtai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:includeFontPadding="false"
        android:text="待付款"
        android:textColor="#ffe3332b"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_taocan_ming"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_taocan_ming" />


    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="12dp"
        android:background="@color/grayeeeeeee"
        app:layout_constraintTop_toBottomOf="@+id/tv_taocan_ming" />

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line"
        android:background="@color/FC0100" />


    <TextView
        android:id="@+id/tv_xiadanshijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:includeFontPadding="false"
        android:text="下单时间：2020-06-20 09:30"
        android:textColor="#ff666666"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_product"
        app:layout_constraintTop_toTopOf="@+id/iv_product" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_youxiaoqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        android:text="有效期至：2020-06-20 09:30"
        android:textColor="#ff666666"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_product"
        app:layout_constraintTop_toBottomOf="@+id/tv_xiadanshijian" />


    <TextView
        android:id="@+id/tv_shuliang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        android:text="数量：1"
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_product"
        app:layout_constraintTop_toBottomOf="@+id/tv_youxiaoqi" />


    <TextView
        android:id="@+id/tv_zongjia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        android:text="总价："
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_product"
        app:layout_constraintTop_toBottomOf="@+id/tv_shuliang" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥ 129.00"
        android:textColor="#fffc0100"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_zongjia"
        app:layout_constraintLeft_toRightOf="@+id/tv_zongjia"
        app:layout_constraintTop_toTopOf="@+id/tv_zongjia" />

    <View
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_zongjia"
        android:layout_width="match_parent"
        android:layout_height="13dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>