<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shendeng.agent">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="聚易佳商家"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/BaseAppTheme">
        <activity
            android:name=".ui.activity.SplashActivity"
            android:theme="@style/Theme.AppLauncher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.HomeBasicActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".ui.activity.WelcomeActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <!--    登录页面    -->
        <activity
            android:name=".ui.activity.LoginActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <!--    手机验证    -->
        <activity
            android:name=".ui.activity.LoginYzmActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <!--    手机验证    -->
        <activity
            android:name=".ui.activity.PhoneCheckActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <!--    密码找回    -->
        <activity
            android:name=".ui.activity.LoginPwdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <!--    订单详情    -->
        <activity
            android:name=".ui.activity.OrderDetailsActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <!--    发货    -->
        <activity
            android:name=".ui.activity.OrderFahuoActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <!--    设置    -->
        <activity
            android:name=".ui.activity.SettingActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <!--    我的钱包    -->
        <activity
            android:name=".ui.activity.WodeQainbaoActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <!--    绑定支付宝    -->
        <activity
            android:name=".ui.activity.SetAlipayActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <!--    提现    -->
        <activity
            android:name=".ui.activity.TixianActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <!--    我的退货地址    -->
        <activity
            android:name=".ui.activity.WodeTuihuoActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <!--    新增退货地址    -->
        <activity
            android:name=".ui.activity.WodeTuihuoAddActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <!--    我的明细    -->
        <activity
            android:name=".ui.activity.WodeMingxiActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <!--    明细详情    -->
        <activity
            android:name=".ui.activity.WodeMingxiDetailsActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <!--    我的结算    -->
        <activity
            android:name=".ui.activity.WodeJiesuanActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <!--    关于我们    -->
        <activity
            android:name=".ui.activity.AboutActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <!--    各种webView页面    -->
        <activity
            android:name=".ui.activity.DefaultX5WebViewActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <!-- 微信 -->
        <activity
            android:name=".wxapi.WXEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:launchMode="singleTop" />

        <!-- 微信 -->
        <activity
            android:name=".wxapi.WXPayEntryActivity"
            android:exported="true"
            android:launchMode="singleTop" />
    </application>
</manifest>